{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 13
    },
    "rules": {
        "linebreak-style": 0,
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "eol-last": ["error", "never"],
        "no-console": "off",
        "prefer-arrow-callback": ["error","always",{ "allowNamedFunctions": true }]
    }
}
